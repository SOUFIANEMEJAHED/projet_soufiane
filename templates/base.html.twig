<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}

            <!-- CSS only -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
            <!-- JavaScript Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        {% endblock %}
    </head>
    <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="{{ path('app_article_index') }}">Blog</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="{{ path('app_article_index') }}">Articles</a>
        </li>

       
         {% if categories is defined and categories is not null %} 
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            categories 
          </a>
          <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
    
       
           

                {% for categorie in categories %}
                {% if categorie is defined and categorie is not null %}
                <li><a class="dropdown-item" href="#"> {{ categorie.categorie }}</a></li> 
                {% endif %} 
                {% endfor %}
                </ul>
        </li>
        {% else %}
        <li class="nav-item">
          <a class="nav-link disabled"></a>
        </li>

         {% endif %}
    
         
        

        




        {% if app.user %}

        <li class="nav-item">
         <a class="nav-link " href="{{ path('app_article_new') }}">Ajouter un article</a>
        
        </li>
        {% endif %}

      </ul>
      <ul class="navbar-nav">
        {% if app.user %}
            <li class="nav-item">
            <a class="nav-link ">Mon compte</a>
            </li>
             <li class="nav-item">
            <a class="nav-link " href="{{ path('app_logout') }}" >Me d√©connecter</a>
            </li>
        {% else %}
        
            <li class="nav-item">
            <a class="nav-link " href="{{ path('app_login') }}">Me connecter</a>
            </li>
         
        
           

         {% endif %}
      </ul>
    </div>
  </div>
</nav>
        {% block body %}{% endblock %}
    </body>
</html>
